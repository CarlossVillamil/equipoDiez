<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Logo" />

        <TextView
            android:id="@+id/tvInventoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Inventory"
            android:textColor="@color/widget_orange_text"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/questionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/logoContainer"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/ivEyeToggle"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_eye_open"
            android:contentDescription="Mostrar/Ocultar saldo"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/ivEyeToggle"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:text="¿Cuánto tengo de inventario?"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionContainer"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/logoContainer"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="$ 326.000,00"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="end" />

    <RelativeLayout
        android:id="@+id/manageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBalance"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/ivManageIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_settings"
            android:contentDescription="Gestionar inventario"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tvManageInventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/ivManageIcon"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:text="Gestionar Inventario"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

</RelativeLayout>
